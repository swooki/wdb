<%- include("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<lable>Title</lable>
			<input type="text"	name="blog[title]" value="<%=blog.title%>">
		</div>
		<div class="field">
			<lable>URL</lable>
			<input type="text"	name="blog[image]" value="<%=blog.image%>">
		</div>
		<div class="field">
			<lable>Blog Content</lable>
			<textarea name="blog[body]" placeholder="blog post goes here"><%=blog.body%></textarea>
		</div>
		<div class="field">
			<input class="ui primary button" type="submit">
		</div>
	</form>
</div>
<%- include("partials/footer") %>